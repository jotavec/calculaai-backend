# ================== APP ==================
NODE_ENV=production
PORT=3000

# ================== BANCO DE DADOS ==================
# PostgreSQL connection string - get from your database provider
DATABASE_URL="postgresql://username:password@host:port/database?sslmode=require"

# ================== SEGURANÇA / JWT ==================
# Generate with: openssl rand -base64 64
JWT_SECRET="your-super-secret-jwt-key-here-minimum-64-characters-recommended"

# ================== CORS / FRONT-END PERMITIDO ==================
# Production frontend URL
FRONTEND_ORIGIN="https://app.calculaaibr.com"
FRONTEND_URL="https://app.calculaaibr.com"

# Optional additional frontend origins for staging/dev
# FRONTEND_ORIGIN_2=""
# FRONTEND_ORIGIN_3=""

# Public IP for direct access (if needed)
ALLOWED_IP=http://your-server-ip

# ================== COOKIES (PRODUÇÃO) ==================
# Domain for cross-subdomain cookies (app.calculaaibr.com <-> api.calculaaibr.com)
COOKIE_DOMAIN=.calculaaibr.com
COOKIE_SECURE=true
COOKIE_SAMESITE=None

# ================== EMAIL (opcional por enquanto) ==================
SMTP_HOST=""
SMTP_PORT=587
SMTP_USER=""
SMTP_PASS=""
MAIL_FROM="CalculaAI <no-reply@calculaaibr.com.br>"
SUGESTOES_TO="suporte@calculaaibr.com.br"

# ================== MERCADO PAGO (opcional por enquanto) ==================
MERCADOPAGO_PUBLIC_KEY=""
MERCADOPAGO_ACCESS_TOKEN=""
MP_RETURN_URL="https://app.calculaaibr.com/pagamento/retorno"

# ================== ARMAZENAMENTO (R2) - opcional agora ==================
R2_ENDPOINT=""
R2_BUCKET=""
R2_ACCESS_KEY_ID=""
R2_SECRET_ACCESS_KEY=""
R2_PUBLIC_URL_PREFIX=""

# ================== ALIASES S3 ==================
S3_ENDPOINT=""
S3_REGION="auto"
S3_BUCKET=""
S3_ACCESS_KEY_ID=""
S3_SECRET_ACCESS_KEY=""
S3_PUBLIC_URL_PREFIX=""